<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="16dp"
    android:orientation="vertical"
    android:textAlignment="center">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/categoryListSpinner"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp"
        android:text="@string/select_category"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="28dp" />

    <Spinner
        android:id="@+id/categoryListSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:entries="@array/category_names"
        android:prompt="@string/app_name"
        android:spinnerMode="dialog" />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/selectImageCategory"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageCategorySwap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_learning"/>

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/imagLearning"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_learning"
        android:visibility="visible" />


</RelativeLayout>
