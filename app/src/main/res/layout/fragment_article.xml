<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_weight="1"
            android:id="@+id/cardLay"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_margin="16dp"
                android:padding="20dp"
                card_view:cardCornerRadius="6dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardPreventCornerOverlap="false">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imgPlace"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                app:layout_constraintDimensionRatio="H,16:9"
                                android:background="#EEE"
                                android:visibility="gone"/>

                            <TextView
                                android:id="@+id/articleTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imgPlace"
                                android:padding="16dp"
                                android:text="Title"
                                android:textAllCaps="false"
                                android:textColor="#000000"
                                android:textSize="24sp"
                                card_view:layout_constraintTop_toBottomOf="@+id/imgPlace"
                                tools:layout_editor_absoluteX="0dp" />

                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/articleContent"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="16dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"
                                    android:scrollbars="vertical"
                                    android:text="content"
                                    android:textSize="14sp"/>

                            </ScrollView>

                        </LinearLayout>


                    <LinearLayout
                        android:id="@+id/icon_card_bar"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_alignParentBottom="true"
                        android:background="#EEE"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        card_view:layout_constraintBottom_toBottomOf="parent"
                        tools:layout_editor_absoluteX="0dp">

                        <ImageView
                            android:id="@+id/previousArticleButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:padding="8dp"
                            app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp" />

                        <ImageView
                            android:id="@+id/saveArticleButton"
                            android:layout_width="48dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:padding="8dp"
                            app:srcCompat="@drawable/ic_favorite_border_black_36dp" />

                        <ImageView
                            android:id="@+id/shareArticleButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_share_black_36dp" />

                        <ImageView
                            android:id="@+id/nextArticleButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:padding="8dp"
                            app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />

                    </LinearLayout>

                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/goodBadButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/goodButton"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/gotit"
                android:textColor="@android:color/white"
                android:background="#7F7F7F"
                android:foreground="?android:attr/selectableItemBackground"/>

            <Button
                android:id="@+id/badButton"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:textColor="@android:color/white"
                android:text="@string/repetiton"
                android:foreground="?android:attr/selectableItemBackground"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@android:color/white">
        </View>


    </LinearLayout>

</RelativeLayout>